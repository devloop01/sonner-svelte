{
	"name": "sonner-svelte",
	"description": "An opinionated toast library for Svelte",
	"version": "0.2.7",
	"author": "Sikriti Dakua <sikriti.dev@gmail.com>",
	"license": "MIT",
	"keywords": [
		"svelte",
		"toast",
		"notifications",
		"snackbar"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/devloop01/sonner-svelte"
	},
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:unit": "vitest",
		"changeset": "changeset",
		"release": "changeset publish"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.26.2",
		"@formkit/auto-animate": "^0.8.1",
		"@playwright/test": "^1.40.0",
		"@svelte-put/copy": "^3.0.0",
		"@sveltejs/adapter-vercel": "^3.1.0",
		"@sveltejs/kit": "^1.27.6",
		"@sveltejs/package": "^2.0.0",
		"@svitejs/changesets-changelog-github-compact": "^1.1.0",
		"@types/prismjs": "^1.26.3",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.54.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.35.1",
		"postcss": "^8.4.31",
		"postcss-preset-env": "^9.3.0",
		"prettier": "^3.1.0",
		"prettier-plugin-svelte": "^3.1.1",
		"prism-svelte": "^0.5.0",
		"prismjs": "^1.29.0",
		"publint": "^0.2.5",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"svelte-writable-derived": "^3.1.0",
		"tslib": "^2.4.1",
		"typescript": "^5.3.2",
		"vite": "^4.4.2",
		"vitest": "^0.34.6"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
